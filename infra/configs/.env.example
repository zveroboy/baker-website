# Database Configuration
# Connection string for timeweb.cloud managed PostgreSQL
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://baker_user:YOUR_SECURE_PASSWORD@db-XXXXX.timeweb.cloud:5432/baker_website?sslmode=require

# JWT Secret for API authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Must be at least 32 characters, use a secure random value
JWT_SECRET=YOUR_RANDOM_64_CHAR_HEX_STRING

# Node Environment
NODE_ENV=production

# API Port
PORT=3000

# Domain Configuration
DOMAIN=kat-sweetcake.ru
PUBLIC_URL=https://kat-sweetcake.ru
API_URL=https://kat-sweetcake.ru/api
ADMIN_URL=https://kat-sweetcake.ru/admin

# Optional: CORS Origins
CORS_ORIGINS=https://kat-sweetcake.ru,https://www.kat-sweetcake.ru

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# Database Backup Credentials
DB_HOST=db-XXXXX.timeweb.cloud
DB_NAME=baker_website
DB_USER=baker_user
DB_PASSWORD=YOUR_SECURE_PASSWORD
