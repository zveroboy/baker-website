{
  "name": "@baker/api",
  "private": true,
  "scripts": {
    "dev": "npm run build && concurrently \"npm:dev:build\" \"npm:dev:start\"",
    "dev:build": "swc src -d dist --config-file .swcrc --watch",
    "dev:start": "node --enable-source-maps --watch dist/src/main.js",
    "build": "swc src -d dist --config-file .swcrc",
    "start": "node dist/src/main.js"
  },
  "dependencies": {
    "@baker/database": "*",
    "@baker/shared-types": "*",
    "@nestjs/common": "^11.1.8",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.5.7",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.19.9",
    "concurrently": "^9.0.0",
    "typescript": "^5.9.2"
  }
}
