{
  "name": "@baker/api",
  "private": true,
  "scripts": {
    "dev": "npm run build && concurrently \"npm:dev:build\" \"npm:dev:start\"",
    "dev:build": "swc src -d dist --config-file .swcrc --watch",
    "dev:start": "node --enable-source-maps --watch dist/src/main.js",
    "build": "swc src -d dist --config-file .swcrc",
    "start": "node dist/src/main.js"
  },
  "dependencies": {
    "@baker/database": "*",
    "@inversifyjs/http-core": "^4.5.0",
    "@inversifyjs/http-hono": "^4.5.0",
    "better-auth": "^1.4.1",
    "hono": "^4.10.6",
    "inversify": "^7.10.4",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.5.7",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.19.25",
    "concurrently": "^9.0.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.13"
  }
}
